<h2>Login</h2>

<% if flash[:error] %>
  <br>
  <strong><%= flash[:error] %></strong>
  <br>
<% end %>


<%= form_with url: login_path, local: true do |f| %>
  <ul>
    <%= f.label :email %>
    <%= f.text_field :email %>
    <br>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <br>
    <%= f.submit 'Login' %>
  </ul>
<% end %>
