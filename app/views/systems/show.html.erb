          <div id="resources">
            <div id="currency"><span id="symbol">&#8353;</span></div>
            <div id="he3"><sup>3</sup>He:</div>
          </div>
        </div>
      </div>
      <div id="system"><h2><%= @current_system.name %></h2></div>
